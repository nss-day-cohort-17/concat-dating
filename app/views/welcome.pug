extends partials/layout.pug

block content
    h1 Welcome to ConCat 🐈 + 🐈 = 😻

    .heading
        h1 Login
        if msg
            h2= msg
    .login-form
        form(method="POST")
            .form-group
                label(for='email') Email Address
                input.form-control#email(
                    type='email'
                    name='email'
                    placeholder='Your Email'
                    required
                )
            .form-group
                label(for='password') Password
                input.form-control#password(
                    type='password'
                    name='password'
                    placeholder='Enter Password'
                    required
                )
            .contact-form__submit
                a.btn.btn-danger.btn-lg(href='/create') Register
                input.btn.btn-info.btn-lg(type='submit' value='Login')